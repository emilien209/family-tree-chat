rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read and write access to all files.
    // This is for development purposes to solve CORS issues.
    // For production, you should restrict write access to authenticated users.
    // e.g., allow write: if request.auth != null;
    match /{allPaths=**} {
      allow read, write;
    }
  }
}
