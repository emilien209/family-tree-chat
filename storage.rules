rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow all reads for now, you can restrict this further if needed
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow users to write to their own posts folder
    match /posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to write to their own avatars folder
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
